{% extends "index.twig" %}

 {% block content %}

     <div class='row mt10'>
         <div class='col-xs-12'>
             <div class="well well-sm">
                 <form class="navbar-form" role="search" method="get" id="search-form" name="search-form">
                     <span class="story-search">Show me completed changes in &nbsp;</span>
                     <select name="story" class="form-control story-search-select">
                         <option value="week">this week</option>
                         <option value="fortnight" selected>last 2 weeks</option>
                         <option value="month">this month</option>
                         <option value="year">this year</option>
                     </select>
                     <span class="story-search">&nbsp; for &nbsp;</span>
                     <select name="label" class="form-control story-search-select">
                         <option value="all">Everything</option>
                         {% if labels|length > 0 %}
                                 {% for label in labels %}
                                     <li>{{ label }}</li>
                                 {% endfor %}
                         {% endif %}
                     </select>
                     <input type="submit" value="Search" name="submit" class="btn btn-primary">
                 </form>
             </div>

             <div class='panel panel-default'>
                 <div class='panel-heading'>
                     <h3 class='panel-title'>
                         <i class='fa icon-feature'></i>
                         New Features</h3>
                 </div>
                 <div class='panel-body' style='overflow: hidden;'>
                     {% if features|length > 0 %}
                         <ul>
                             {% for feature in features %}
                                 <li>{{ feature.name }}</li>
                             {% endfor %}
                         </ul>
                     {% endif %}
                 </div>
             </div>
             <div class='panel panel-default'>
                 <div class='panel-heading'>
                     <h3 class='panel-title'>
                         <i class='fa icon-bug'></i>
                         Fixed Bugs
                     </h3>
                 </div>
                 <div class='panel-body' style='overflow: hidden;'>
                     {% if bugs|length > 0 %}
                         <ul>
                             {% for bug in bugs %}
                                 <li>{{ bug.name }}</li>
                             {% endfor %}
                         </ul>
                     {% endif %}
                 </div>
             </div>
         </div>
     </div>
 {% endblock %}
