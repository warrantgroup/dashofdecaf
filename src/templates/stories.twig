{% extends "index.twig" %}
 
 {% block content %}
     <div class="container">
         <div class="row">
             <div class="col-md-10" style="padding-bottom: 15px;">
                 <div class="input-group">
                     <input type="hidden" name="search_param" value="all" id="search_param">
                     <input type="text" class="form-control" name="x" placeholder="Search term...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button"><span
                                        class="glyphicon glyphicon-search"></span></button>
                        </span>
                 </div>
             </div>
             <div class="col-md-10">
                 {% for story in stories %}
                     <div class='panel panel-default'>
                         <div class='panel-heading'>
                             {% if story.current_state == 'accepted' or story.current_state == 'finished' %}
                                 <span class='label label-success pull-right'>Finished</span>
                             {% elseif story.current_state == 'delivered' or story.current_state == 'rejected' or story.current_state == 'started' %}
                                 <span class='label label-warning pull-right'>Work in progress</span>
                             {% endif %}
                             <h3 class='panel-title'>
                                 {% if story.story_type == 'bug' %}
                                     <i class='fa icon-bug'></i>
                                 {% elseif story.story_type == 'feature' %}
                                     <i class='fa icon-feature'></i>
                                 {% elseif story.story_type == 'chore' %}
                                     <i class='fa icon-chore'></i>
                                 {% elseif story.story_type == 'release' %}
                                     <i class='fa icon-release'></i>
                                 {% endif %}
                                 <a href={{ story.url }} target="_blank">{{ story.name }}
                                     <small>
                                         <i class='fa fa-external-link ml5'></i>
                                     </small>
                                 </a></h3>
                         </div>
                         {% if story.description is defined %}
                             <div class='panel-body' style='overflow: hidden;'>
                                 <p class='pl10'>{{ story.description }}</p>
                             </div>
                         {% endif %}
                     </div>
                 {% endfor %}
             </div>
             <div class="col-md-2">
                 <div class="row">
                     <div class="well">
                         <p><strong>Story Type</strong></p>
                         <div class="input-group" style="margin-bottom: 20px;">
                                 <div class="checkbox">
                                     <label>
                                         <input type="checkbox" value="">
                                         Features
                                     </label>
                                 </div>
                             <div class="checkbox">
                                 <label>
                                     <input type="checkbox" value="">
                                     Bugs
                                 </label>
                             </div>
                             <div class="checkbox">
                                 <label>
                                     <input type="checkbox" value="">
                                     Chores
                                 </label>
                             </div>
                             <div class="checkbox">
                                 <label>
                                     <input type="checkbox" value="">
                                     Releases
                                 </label>
                             </div>
                         </div>

                         <p><strong>Story Status</strong></p>
                         <div class="input-group">
                             <div class="checkbox">
                                 <label>
                                     <input type="checkbox" value="">
                                     Work in Progress
                                 </label>
                             </div>
                             <div class="checkbox">
                                 <label>
                                     <input type="checkbox" value="">
                                     Finished
                                 </label>
                             </div>
                             <div class="checkbox">
                                 <label>
                                     <input type="checkbox" value="">
                                     Scheduled
                                 </label>
                             </div>
                             <div class="checkbox">
                                 <label>
                                     <input type="checkbox" value="">
                                     Icebox
                                 </label>
                             </div>
                         </div>
                     </div>
                 </div>
             </div>
         </div>
     </div>
 {% endblock %}
